@model FastParts.Models.UsuarioViewModel

@{
    ViewBag.Title = Model.Id == 0 ? "Nuevo Usuario" : "Editar Usuario";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            <label class="form-label">Nombre de Usuario</label>
            @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NombreUsuario, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Correo</label>
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @type = "email" })
            @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Roles asignados</label>
            @foreach (string rol in ViewBag.Roles as List<string>)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@rol"
                           @(Model.Roles.Contains(rol) ? "checked" : "") />
                    <label class="form-check-label">@rol</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("Lista")" class="btn btn-secondary">Cancelar</a>
    }
</div>



@model FastParts.Models.CitaEditarMecanicoViewModel
@{
    ViewBag.Title = "Editar Cita Terminada";
}

<div class="container mt-4">
    <a href="@Url.Action("MisCitasMecanico", "Cita")"
       class="btn btn-outline-secondary mb-3">← Volver a mis citas</a>

    <h2 class="mb-4">Editar Cita Terminada</h2>

    @using (Html.BeginForm("EditarServicio", "Cita", FormMethod.Post, new { enctype = "multipart/form-data", id = "formEditarServicio" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.CitaId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Motivo, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Motivo, 5, 60, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Motivo, "", new { @class = "text-danger" })
                </div>

                <h5 class="mt-3 mb-2">Fotos actuales</h5>
                <div class="row mb-3">
                    <div class="col-md-6 text-center">
                        <p><strong>Antes</strong></p>
                        @if (Model.TieneFotoAntes)
                        {
                            <img src="@Url.Action("ObtenerFoto", "Cita", new { id = Model.CitaId, tipo = "antes" })"
                                 class="img-fluid rounded shadow-sm mb-2" />
                        }
                        else
                        {
                            <p class="text-muted">Sin foto</p>
                        }

                        @Html.LabelFor(m => m.FotoAntes, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.FotoAntes, new { type = "file", @class = "form-control", accept = "image/*" })
                    </div>

                    <div class="col-md-6 text-center">
                        <p><strong>Después</strong></p>
                        @if (Model.TieneFotoDespues)
                        {
                            <img src="@Url.Action("ObtenerFoto", "Cita", new { id = Model.CitaId, tipo = "despues" })"
                                 class="img-fluid rounded shadow-sm mb-2" />
                        }
                        else
                        {
                            <p class="text-muted">Sin foto</p>
                        }

                        @Html.LabelFor(m => m.FotoDespues, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.FotoDespues, new { type = "file", @class = "form-control", accept = "image/*" })
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary" id="btnGuardarCambios">Guardar cambios</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("#btnGuardarCambios").on("click", function (e) {
            e.preventDefault();
            Swal.fire({
                title: '¿Guardar cambios?',
                text: 'Se actualizarán los datos de esta cita.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Sí, guardar',
                cancelButtonText: 'Cancelar'
            }).then(result => {
                if (result.isConfirmed) {
                    $("#formEditarServicio").off("submit").submit();
                }
            });
        });
    </script>
}

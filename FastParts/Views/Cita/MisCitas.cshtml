@model IEnumerable<FastParts.Models.CitaListadoViewModel>
@{
    ViewBag.Title = "Mis Citas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Mis Citas</h2>
        <a href="@Url.Action("CrearCliente", "Cita")" class="btn btn-primary">
            Agendar nueva cita
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered" id="tablaMisCitas">
                <thead>
                    <tr>
                        <th>Fecha Cita</th>
                        <th>Vehículo</th>
                        <th>Placa</th>
                        <th>Estado</th>
                        <th>Mecánico</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Vehiculo</td>
                            <td>@item.Placa</td>
                            <td>@item.Estado</td>
                            <td>@item.NombreMecanico</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>$(function () {
            $("#tablaMisCitas").DataTable({
                order: [[0, "desc"]],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                }
            });
        });</script>
}

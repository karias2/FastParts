@model FastParts.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock-fill fs-1 text-primary"></i>
                        <h3 class="mt-2 fw-bold">@ViewBag.Title</h3>
                        <p class="text-muted mb-0">Actualiza tu contraseña de manera segura</p>
                    </div>

                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "alert alert-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.OldPassword, "Contraseña actual", new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text bg-light text-muted">
                                    <i class="bi bi-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Introduce tu contraseña actual" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NewPassword, "Nueva contraseña", new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text bg-light text-muted">
                                    <i class="bi bi-key"></i>
                                </span>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Introduce tu nueva contraseña" })
                            </div>
                            <small class="text-muted">Debe tener al menos 8 caracteres, una mayúscula y un número.</small>
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.ConfirmPassword, "Confirmar nueva contraseña", new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text bg-light text-muted">
                                    <i class="bi bi-check2-circle"></i>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repite la nueva contraseña" })
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-arrow-repeat me-2"></i>Cambiar contraseña
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@{
    ViewBag.Title = "Confirmación de recuperación de contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 text-center p-4">
                <div class="card-body">
                    <i class="bi bi-envelope-check fs-1 text-success mb-3"></i>
                    <h3 class="fw-bold mb-2">@ViewBag.Title</h3>
                    <p class="text-muted">
                        Hemos enviado un enlace de recuperación a tu correo electrónico.
                        Por favor, revisa tu bandeja de entrada y sigue las instrucciones para restablecer tu contraseña.
                    </p>

                    <div class="mt-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Ir al inicio de sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

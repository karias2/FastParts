        <div class="mb-3">
            <label class="form-label">Roles</label>
            <div class="form-check">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check me-3">
                        @Html.HiddenFor(m => m.Roles[i].Name)
                        @Html.CheckBoxFor(m => m.Roles[i].Assigned, new { @class = "form-check-input", id = $"role_{i}" })
                        <label class="form-check-label" for="@($"role_{i}")">@Model.Roles[i].Name</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>

        <a href="@Url.Action("Usuarios", "Account")" class="btn btn-secondary">Cancelar</a>

        @Html.ValidationSummary(true, "", new { @class = "text-danger mt-2" })
    }
</div>

@model FastParts.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidaste tu contraseña?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-lock fs-1 text-primary"></i>
                        <h3 class="mt-2 fw-bold">@ViewBag.Title</h3>
                        <p class="text-muted mb-0">Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña</p>
                    </div>

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "alert alert-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, "Correo electrónico", new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text bg-light text-muted">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ejemplo@correo.com" })
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-send me-2"></i>Enviar enlace
                            </button>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none text-primary small">
                            <i class="bi bi-arrow-left me-1"></i>Volver al inicio de sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FastParts</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Font Awesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            @Html.ActionLink("FastParts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("¿Quienes somos?", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <!-- Cliente Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="clienteDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Cliente
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="clienteDropdown">
                            <li>@Html.ActionLink("Perfil", "Perfil", "Cliente", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Editar Perfil", "EditarPerfil", "Cliente", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Llenar Encuesta", "Crear", "Encuesta", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Recordatorios", "ListaRecordatorios", "Recordatorio", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                            <li>@Html.ActionLink("Panel Administrador", "Index", "Admin", null, new { @class = "dropdown-item" })</li>
                            <li>
                                @Html.ActionLink("Listado de Cotizaciones", "Index", "Cotizacions", null, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="mecanicoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mecánico
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="mecanicoDropdown">
                            <li>@Html.ActionLink("Ingreso Vehículo", "IngresoVehiculo", "Mecanico", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Detalles Servicio", "DetallesServicio", "Mecanico", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Encuestas", "AdministrarEncuestas", "Encuesta", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content flex-grow-1">
        @RenderBody()
        @*<hr />*@
    </div>

    <footer class="mt-auto text-center bg-dark">
        <div class="row pt-3">
            <div class="col-md-4 text-white">
                <h5>Enlaces Rápidos</h5>
                <ul class="list-unstyled">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                </ul>
            </div>
            <div class="col-md-4 text-white">
                <h5>Redes Sociales</h5>
                <a href="https://www.facebook.com/p/Pro-Partes-CR-100054389415253/" class="text-white me-2"><i class="fab fa-facebook"></i></a>
                <a href="https://www.instagram.com/propartescr?igsh=MW8xZHI2ZThqcWl6Zg==" class="text-white mx-2"><i class="fab fa-instagram"></i></a>
                <a href="https://wa.me/50612345678?text=¡Hola%20FastParts!"
                   class="text-white mx-2"
                   target="_blank"
                   rel="noopener"
                   aria-label="WhatsApp FastParts">
                    <i class="fab fa-whatsapp"></i>
                </a>
            </div>
            <div class="col-md-4 text-white">
                <h5>ProPartes CR</h5>
                <p>
                    📍Tibás, 150 mts Este de Epa.
                    (Frente a Fresh Market)🔧🏎️
                </p>
                <p>Email: <a href="mailto:propartescr@hotmail.com">propartescr@hotmail.com</a></p>
                <p>Teléfono: <a href="tel:+50683737272">+(506)8373-7272</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img src="@Url.Content("~/Content/ProPartesLogo-bgTransparente.png")"
                     alt="Logo FastParts"
                     class="img-fluid mx-auto d-block mb-2"
                     style="max-height: 60px;" />
            </div>
        </div>

        <div class="row pb-4">
            <div class="col">
                <p class="m-0 text-white">
                    Copyright &copy; @DateTime.Now.Year FastParts
                </p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>

    <!-- Chatbot -->
    <div id="chatbot-container">
        <div id="chatbot-toggle">💬</div>
        <div id="chatbot-box" class="hidden">
            <div id="chatbot-header">¿En qué te ayudamos?</div>
            <div id="chatbot-body">
                <p class="chatbot-question">🤖 ¿Cuál es el tiempo de entrega?</p>
                <p class="chatbot-question">🤖 ¿Tienen repuestos originales?</p>
            </div>
        </div>
    </div>

    <script>
        const toggle = document.getElementById("chatbot-toggle");
        const box = document.getElementById("chatbot-box");

        toggle.addEventListener("click", () => {
            box.classList.toggle("hidden");
        });

        document.querySelectorAll('.chatbot-question').forEach(el => {
            el.addEventListener('click', () => {
                alert("Funcionalidad en desarrollo. ¡Gracias por tu consulta!");
            });
        });
    </script>

</body>
</html>

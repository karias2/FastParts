@model List<FastParts.Models.Recordatorio>

@{
    ViewBag.Title = "Mis Recordatorios";
}
<div class="container mt-4">
    <h2 class="mb-4">Mis Recordatorios de Servicio</h2>

    <a href="@Url.Action("Crear", "Recordatorio")" class="btn btn-success mb-3">+ Nuevo Recordatorio</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Descripción</th>
                <th>Fecha del Servicio</th>
                <th>Metodo de Contacto</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recordatorio in Model)
            {
                <tr>
                    <td>@recordatorio.Id</td>
                    <td>@recordatorio.Descripcion</td>
                    <td>@recordatorio.FechaServicio.ToString("dd/MM/yyyy")</td>
                    <td>@string.Join(", ", recordatorio.MetodosEnvio)</td>
                    <td>
                        <span class="badge bg-@(recordatorio.Activo ? "success" : "secondary")">
                            @(recordatorio.Activo ? "Sí" : "No")
                        </span>
                    </td>
                    <td>
                        <a href="@Url.Action("Editar", "Recordatorio", new { id = recordatorio.Id })" class="btn btn-sm btn-primary me-2">Editar</a>
                        <a href="@Url.Action("Eliminar", "Recordatorio", new { id = recordatorio.Id })" class="btn btn-sm btn-danger"
                           onclick="return confirm('¿Estás seguro de que deseas eliminar este recordatorio?');">
                            Eliminar
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>


@model IEnumerable<FastParts.Models.CotizacionListadoViewModel>
@using System.Globalization
@{
    ViewBag.Title = "Gestionar Cotizaciones";
    var cr = new CultureInfo("es-CR");
var estadoFiltro = ViewBag.EstadoFiltro as string ?? "REVICION";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="bi bi-clipboard-check"></i> Gestionar Cotizaciones</h2>
   <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Volver al Panel
   </a>
  </div>

    @if (TempData["Success"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show">
   @TempData["Success"]
   <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
     </div>
    }

    @if (TempData["Error"] != null)
    {
   <div class="alert alert-danger alert-dismissible fade show">
  @TempData["Error"]
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
   <div class="card-body">
     <h5 class="card-title">Filtrar por Estado</h5>
       <div class="btn-group" role="group">
  <a href="@Url.Action("GestionarCotizaciones", new { estado = "REVICION" })" 
 class="btn @(estadoFiltro == "REVICION" ? "btn-warning" : "btn-outline-warning")">
    <i class="bi bi-hourglass-split"></i> En Revisión
      </a>
       <a href="@Url.Action("GestionarCotizaciones", new { estado = "COMPLETADA" })" 
 class="btn @(estadoFiltro == "COMPLETADA" ? "btn-success" : "btn-outline-success")">
     <i class="bi bi-check-circle"></i> Completadas
   </a>
   <a href="@Url.Action("GestionarCotizaciones", new { estado = "INACTIVA" })" 
class="btn @(estadoFiltro == "INACTIVA" ? "btn-secondary" : "btn-outline-secondary")">
  <i class="bi bi-x-circle"></i> Rechazadas
  </a>
    <a href="@Url.Action("GestionarCotizaciones", new { estado = "" })" 
      class="btn @(string.IsNullOrEmpty(estadoFiltro) ? "btn-primary" : "btn-outline-primary")">
       <i class="bi bi-list"></i> Todas
  </a>
  </div>
 </div>
    </div>

    @if (!Model.Any())
    {
   <div class="alert alert-info">
    <i class="bi bi-info-circle"></i> No hay cotizaciones con el estado seleccionado.
</div>
    }
 else
    {
      <div class="table-responsive">
 <table class="table table-striped table-hover">
    <thead class="table-dark">
     <tr>
   <th>ID</th>
  <th>Cliente</th>
     <th>Fecha Creación</th>
    <th>Fecha Cita</th>
    <th>Estado</th>
  <th class="text-end">Items</th>
    <th class="text-end">Monto Total</th>
     <th>Acciones</th>
     </tr>
 </thead>
 <tbody>
     @foreach (var cot in Model)
      {
        var estadoClass = "";
   var estadoTexto = cot.Estado;
  
   switch (cot.Estado)
{
      case "REVICION":
  estadoClass = "bg-warning text-dark";
  estadoTexto = "En Revisión";
     break;
     case "COMPLETADA":
 estadoClass = "bg-success text-white";
   estadoTexto = "Completada";
       break;
   case "INACTIVA":
  estadoClass = "bg-secondary text-white";
 estadoTexto = "Rechazada";
       break;
    }

    <tr>
    <td><strong>#@cot.IdCotizacion</strong></td>
   <td>
              <div>@cot.NombreCliente</div>
  <small class="text-muted">@cot.EmailCliente</small>
       </td>
        <td>@cot.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
   <td>@cot.FechaCita.ToString("dd/MM/yyyy")</td>
     <td><span class="badge @estadoClass">@estadoTexto</span></td>
   <td class="text-end">
         <span class="badge bg-primary">@cot.CantidadRepuestos R</span>
     <span class="badge bg-success">@cot.CantidadServicios S</span>
       </td>
<td class="text-end"><strong>@cot.MontoTotal.ToString("C", cr)</strong></td>
     <td>
    <a href="@Url.Action("DetalleCotizacion", new { id = cot.IdCotizacion })" 
           class="btn btn-sm btn-info">
   <i class="bi bi-eye"></i> Ver
       </a>
    </td>
       </tr>
        }
     </tbody>
    </table>
     </div>
    }
</div>

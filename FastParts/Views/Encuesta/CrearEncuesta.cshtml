
@model FastParts.Models.EncuestaModel

@{
    ViewData["Title"] = "Gestión de Encuesta";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-poll me-2"></i>Gestión de Encuesta</h1>
        <a href="@Url.Action("AdministrarEncuestas", "Encuesta")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información de la Encuesta</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-4"><strong>ID de Encuesta:</strong></div>
                <div class="col-sm-8">@Model.ID_Encuesta</div>
            </div>
            <div class="row">
                <div class="col-sm-4"><strong>Fecha de Creación:</strong></div>
                <div class="col-sm-8">@Model.FechaCreacion.ToShortDateString()</div>
            </div>
            @using (Html.BeginForm("ActualizarEncuesta", "Encuesta", new { ID_Encuesta = @Model.ID_Encuesta }, FormMethod.Post))
            {
                <div class="row">
                    <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Nombre, new { @class = "form-label" }):</strong></div>
                    <div class="col-sm-8">@Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Nombre" })</div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Descripcion, new { @class = "form-label" })</strong></div>
                    <div class="col-sm-8">@Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Descripcion" })</div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><button type="submit" class="btn btn-success w-100">Guardar</button></div>
                </div>
            }
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list-check me-2"></i>Preguntas de la Encuesta</h5>
                </div>
                <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Descripción de la Pregunta</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pregunta in Model.Preguntas)
                                    {
                                        <tr>
                                            <td>@pregunta.ID_Pregunta</td>
                                            <td>@pregunta.Descripcion</td>
                                            <td>
                                                <a asp-action="EditPregunta" asp-route-id="@pregunta.ID_Pregunta" class="btn btn-sm btn-outline-primary me-2" title="Editar">
                                                    <i class="fas fa-pencil"></i>
                                                </a>
                                                <a asp-action="DeletePregunta" asp-route-id="@pregunta.ID_Pregunta" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="fas fa-trash-can"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Agregar Nueva Pregunta</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AgregarPregunta" method="post">
                        <input type="hidden" name="encuestaId" value="@Model.ID_Encuesta" />
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción de la pregunta</label>
                            <textarea name="descripcion" class="form-control" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-paper-plane me-2"></i>Guardar Pregunta
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
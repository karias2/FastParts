
@model FastParts.Models.EncuestaViewModel

@{
    ViewData["Title"] = "Gestión de Encuesta";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-poll me-2"></i>Gestión de Encuesta</h1>
        <a href="@Url.Action("AdministrarEncuestas", "Encuesta")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información de la Encuesta</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-4"><strong>ID de Encuesta:</strong></div>
                <div class="col-sm-8">@Model.Encuesta.ID_Encuesta</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4"><strong>Fecha de Creación:</strong></div>
                <div class="col-sm-8">@Model.Encuesta.FechaCreacion.ToShortDateString()</div>
            </div>
            @using (Html.BeginForm("ActualizarEncuesta", "Encuesta", new { ID_Encuesta = @Model.Encuesta.ID_Encuesta }, FormMethod.Post))
            {
                <div class="row mb-3">
                    <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Encuesta.Nombre, new { @class = "form-label" }):</strong></div>
                    <div class="col-sm-8">@Html.TextBoxFor(model => model.Encuesta.Nombre, new { @class = "form-control", placeholder = "Nombre" })</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Encuesta.Descripcion, new { @class = "form-label" })</strong></div>
                    <div class="col-sm-8">@Html.TextAreaFor(model => model.Encuesta.Descripcion, new { @class = "form-control", placeholder = "Descripcion", rows = "3" })</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><button type="submit" class="btn btn-success w-100">Guardar</button></div>
                </div>
            }
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list-check me-2"></i>Preguntas de la Encuesta</h5>
                </div>
                <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <tbody>
                                    @foreach (var pregunta in Model.Encuesta.Preguntas)
                                    {
                                        <tr>
                                            <div class="encuesta-title">
                                                <label class="form-label fw-bold"> @pregunta.ID_Pregunta - @pregunta.Descripcion</label>
                                            </div>

                                            <div class="encuesta-body">
                                                <div class="mb-4 p-3 border rounded shadow-sm">
                                                    @{
                                                        string inputName = $"Respuesta_{pregunta.ID_Pregunta}";
                                                    }

                                                    @switch (pregunta.Tipo)
                                                    {
                                                        case "Rango":
                                                            // Tipo: Rango (Input Type Range)
                                                            <div class="mt-2">
                                                                <input type="range"
                                                                       name="@inputName"
                                                                       class="form-range"
                                                                       min="@pregunta.Minimo"
                                                                       max="@pregunta.Maximo"
                                                                       value="@(pregunta.ValorRespuesta ?? 1)" />
                                                                <small class="text-muted">Valor: <span id="valor-@inputName">@(pregunta.Minimo ?? 1)</span></small>
                                                            </div>
                                                            break;

                                                        case "Texto":
                                                            // Tipo: Texto (Textarea para respuestas largas)
                                                            <div class="mt-2">
                                                                <textarea 
                                                                    name="@inputName"
                                                                    value="@pregunta.TextoRespuesta"
                                                                    class="form-control"
                                                                    rows="3"
                                                                    placeholder="Escriba su respuesta..."
                                                                ></textarea>
                                                            </div>
                                                            break;

                                                        case "OpcionMultiple":
                                                            // Tipo: Opción Múltiple (Dropdown/Select con múltiples opciones)
                                                            <div class="mt-2">
                                                                <select 
                                                                    name="@inputName"
                                                                    class="form-select"
                                                                    value="@pregunta.TextoRespuesta"
                                                                    multiple
                                                                >
                                                                    @* Las opciones deben ser parseadas del campo pregunta.opciones (separadas por coma) *@
                                                                    @foreach (var opcion in (pregunta.Opciones ?? "").Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries))
                                                                    {
                                                                            <option value="@opcion.Trim()">
                                                                                @opcion.Trim()
                                                                            </option>
                                                                    }
                                                                </select>
                                                            </div>
                                                            break;

                                                        case "CasillasVerificacion":
                                                            // Tipo: Casillas de Verificación (Checkboxes)
                                                            <div class="mt-2">
                                                                @foreach (var opcion in (pregunta.Opciones ?? "").Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries))
                                                                {
                                                                    <div class="form-check">
                                                                        <input class="form-check-input"
                                                                               type="checkbox"
                                                                               name="@inputName"
                                                                               value="@pregunta.TextoRespuesta">
                                                                        <label class="form-check-label">
                                                                            @opcion.Trim()
                                                                        </label>
                                                                    </div>
                                                                }
                                                            </div>
                                                            break;

                                                        default: break;
                                                    }
                                                </div>
                                            </div>
                                            
                                            <div class="encuesta-btns">
                                                @using (Html.BeginForm("EditarPregunta", "Encuesta", new { ID_Encuesta = @Model.ID_Encuesta, ID_Pregunta = @pregunta.ID_Pregunta }, FormMethod.Post))
                                                {
                                                    <div class="row mb-4">
                                                        <div class="col-sm-4"><button type="submit" class="btn btn-sm btn-outline-primary me-2"><i class="fas fa-pencil"></i> Editar</button></div>
                                                    </div>
                                                }
                                            </div>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Agregar Nueva Pregunta</h5>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("CrearPregunta", "Encuesta", new { ID_Encuesta = @Model.ID_Encuesta, ID_Pregunta = @Model.ID_Pregunta }, FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción de la pregunta</label>
                            <div>@Html.TextAreaFor(model => model.Pregunta.Descripcion, new { @class = "form-control", placeholder = "Descripcion" })</div>
                        </div>

                        <div class="mb-3">
                            <label for="tipoPregunta" class="form-label">Tipo de pregunta</label>

                            <div>
                                @Html.DropDownListFor(
                                    model => model.Pregunta.Tipo,
                                    @Model.TiposDePregunta,
                                    "Seleccione un tipo",
                                    new { @class = "form-select" }
                                )
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Pregunta.Minimo, new { @class = "form-label" }):</strong></div>
                            <div class="col-sm-8">@Html.TextBoxFor(model => model.Pregunta.Minimo, new { @type = "number", @class = "form-control", placeholder = "0" })</div>

                            <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Pregunta.Maximo, new { @class = "form-label" }):</strong></div>
                            <div class="col-sm-8">@Html.TextBoxFor(model => model.Pregunta.Maximo, new { @type = "number", @class = "form-control", placeholder = "10" })</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Pregunta.Opciones, new { @class = "form-label" })</strong></div>
                            <div class="col-sm-8">@Html.TextAreaFor(model => model.Pregunta.Opciones, new { @class = "form-control", placeholder = "Bueno, Malo", rows = "3" })</div>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-paper-plane me-2"></i>Guardar Pregunta
                        </button>
                    }

                    @if (@Model.ID_Pregunta != null)
                    {
                        <div class="row mt-4">
                            @using (Html.BeginForm("EliminarPregunta", "Encuesta", new { ID_Encuesta = @Model.ID_Encuesta, ID_Pregunta = @Model.ID_Pregunta }, FormMethod.Post))
                            {
                                <div class="col-sm-4"><button type="submit" class="btn btn-sm btn-outline-danger me-2"><i class="fas fa-trash-can"></i> Eliminar</button></div>
                            }
                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>
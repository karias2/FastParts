
@model FastParts.Models.EncuestaViewModel

@{
    ViewData["Title"] = "Gestión de Encuesta";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-poll me-2"></i>Gestión de Encuesta</h1>
        <a href="@Url.Action("AdministrarEncuestas", "Encuesta")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Información de la Encuesta</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-4"><strong>ID de Encuesta:</strong></div>
                <div class="col-sm-8">@Model.Encuesta.ID_Encuesta</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4"><strong>Fecha de Creación:</strong></div>
                <div class="col-sm-8">@Model.Encuesta.FechaCreacion.ToShortDateString()</div>
            </div>
            @using (Html.BeginForm("ActualizarEncuesta", "Encuesta", new { ID_Encuesta = @Model.Encuesta.ID_Encuesta }, FormMethod.Post))
            {
                <div class="row mb-3">
                    <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Encuesta.Nombre, new { @class = "form-label" }):</strong></div>
                    <div class="col-sm-8">@Html.TextBoxFor(model => model.Encuesta.Nombre, new { @class = "form-control", placeholder = "Nombre" })</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><strong>@Html.LabelFor(model => model.Encuesta.Descripcion, new { @class = "form-label" })</strong></div>
                    <div class="col-sm-8">@Html.TextBoxFor(model => model.Encuesta.Descripcion, new { @class = "form-control", placeholder = "Descripcion" })</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><button type="submit" class="btn btn-success w-100">Guardar</button></div>
                </div>
            }
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list-check me-2"></i>Preguntas de la Encuesta</h5>
                </div>
                <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Descripción de la Pregunta</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pregunta in Model.Encuesta.Preguntas)
                                    {
                                        <tr>
                                            <td>@pregunta.ID_Pregunta</td>
                                            <td>@pregunta.Descripcion</td>
                                            <td>
                                                <a asp-action="EditPregunta" asp-route-id="@pregunta.ID_Pregunta" class="btn btn-sm btn-outline-primary me-2" title="Editar">
                                                    <i class="fas fa-pencil"></i>
                                                </a>
                                                <a asp-action="DeletePregunta" asp-route-id="@pregunta.ID_Pregunta" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="fas fa-trash-can"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Agregar Nueva Pregunta</h5>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("CrearPregunta", "Encuesta", new { ID_Encuesta = @Model.Encuesta.ID_Encuesta }, FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción de la pregunta</label>
                            <div>@Html.TextAreaFor(model => model.Pregunta.Descripcion, new { @class = "form-control", placeholder = "Descripcion" })</div>
                        </div>

                        <div class="mb-3">
                            <label for="tipoPregunta" class="form-label">Tipo de pregunta</label>

                            <div>
                                @Html.DropDownListFor(
                                    model => model.Pregunta.Tipo,
                                    @Model.TiposDePregunta,
                                    "Seleccione un tipo",
                                    new { @class = "form-select" }
                                )
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-paper-plane me-2"></i>Guardar Pregunta
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
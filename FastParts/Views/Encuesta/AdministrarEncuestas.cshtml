
@model List<FastParts.Models.EncuestaModel>

@{
    ViewBag.Title = "Encuestas de Satisfacción";
}

<div class="container mt-4">

    <div class="col">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary mb-3"> ← Volver al Panel de Administración </a>
    </div>

    <h2 class="mb-4">Encuestas</h2>

    <div class="col">
        <a href="@Url.Action("CrearEncuesta", "Encuesta")" class="btn btn-outline-primary mb-3">Crear</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Fecha de Creacion</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var encuesta in Model)
            {
                <tr>
                    <td>@encuesta.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>@encuesta.Nombre</td>
                    <td>@encuesta.Descripcion</td>
                    <td>
                        <a href="@Url.Action("CrearEncuesta", "Encuesta", new { IdEncuesta = @encuesta.ID_Encuesta })" class="btn btn-primary mb-3">Editar</a>
                        <a href="@Url.Action("LlenarEncuesta", "Encuesta", new { IdEncuesta = @encuesta.ID_Encuesta })" class="btn btn-secondary mb-3">Ver</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


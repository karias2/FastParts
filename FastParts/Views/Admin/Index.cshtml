@{
    ViewBag.Title = "Panel de Administración";
}

<div class="container mt-4">
    <h2 class="mb-4">Panel de Administración</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-primary mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Encuestas de Satisfacción</h5>
                    <p class="card-text">Ver todas las encuestas enviadas por los clientes.</p>
                    <a href="@Url.Action("VerTodas", "Encuesta")" class="btn btn-outline-primary">Ver Encuestas</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-success mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Gestion de usuarios</h5>
                    <p class="card-text">Consultar y gestionar usuarios del sistema.</p>
                    <a href="@Url.Action("Lista", "Usuario")" class="btn btn-outline-success">Ver Usuarios</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-danger mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reportes</h5>
                    <p class="card-text">Visualizar reportes sobre servicios del taller.</p>
                    <a href="@Url.Action("Index", "Reporte")" class="btn btn-outline-danger">Ver Reportes</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-info mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Servicios</h5>
                    <p class="card-text">Visualizar servicios ofrecidos en el taller.</p>
                    <a href="@Url.Action("Index", "Servicio")" class="btn btn-outline-info">Ver Servicios</a>
                </div>
            </div>
        </div>
    </div>
</div>



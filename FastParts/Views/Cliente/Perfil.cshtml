
@model FastParts.Models.PerfilViewModel

@{
    ViewBag.Title = "Perfil de Usuario";
}

<h2>Perfil de Usuario</h2>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        Perfil de Usuario
                    </h5>
                </div>

                <div class="card-body">

                    <div class="mb-3">
                        <label class="form-label text-muted">Nombre completo</label>
                        <div class="fw-semibold">@Model.NombreCompleto</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">Dirección</label>
                        <div class="fw-semibold">@Model.Direccion</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">Correo electrónico</label>
                        <div class="fw-semibold">@Model.Email</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">Teléfono</label>
                        <div class="fw-semibold">@Model.Telefono</div>
                    </div>

                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a href="@Url.Action("EditarPerfil", "Cliente")"
                       class="btn btn-primary">
                        Editar perfil
                    </a>

                    <a href="@Url.Action("ChangePassword", "Account")"
                       class="btn btn-outline-secondary">
                        Cambiar contraseña
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

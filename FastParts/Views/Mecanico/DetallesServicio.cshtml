@model FastParts.Models.ConsumosServicioVM
@using System.Globalization
@{
    var cr = new CultureInfo("es-CR");
}
@using (Html.BeginForm("RegistrarConsumo", "Mecanico", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("servicioId", Model.ServicioId)

    <h2>Registrar repuestos usados</h2>

    if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }
    if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <div class="form-group">
        <label class="control-label col-md-2">Repuesto</label>
        <div class="col-md-6">
            @Html.DropDownList("repuestoId",
                (SelectList)ViewBag.Repuestos,
                "-- Seleccione --",
                new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Cantidad</label>
        <div class="col-md-2">
            <input type="number" name="cantidad" min="1" value="1" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <button type="submit" class="btn btn-primary">
                Agregar consumo
            </button>
            @Html.ActionLink("Volver a servicios", "Index", "Servicio", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

<hr />
<h3>Repuestos ya registrados en este servicio</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Repuesto</th>
            <th>Cantidad</th>
            <th>Precio Unit.</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Consumos != null && Model.Consumos.Any())
        {
            foreach (var c in Model.Consumos)
            {
                <tr>
                    <td>@(c.Repuesto != null ? c.Repuesto.Nombre : "—")</td>
                    <td>@c.Cantidad</td>
                    <td>@c.PrecioUnitario.ToString("C", cr)</td>
                    <td>@((c.PrecioUnitario * c.Cantidad).ToString("C", cr))</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-muted">Aún no hay consumos registrados.</td></tr>
        }
    </tbody>
</table>

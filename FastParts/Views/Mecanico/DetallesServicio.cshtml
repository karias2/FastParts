@{
    ViewBag.Title = "Detalles del Servicio";
}

<h2>Detalles del Servicio</h2>

<form style="max-width: 600px; margin-top: 20px;">
    <div class="form-group">
        <label>Comentarios</label>
        <textarea class="form-control" rows="3" placeholder="Escribe detalles del servicio..."></textarea>
    </div>

    <div class="form-group">
        <label>Foto del Vehículo</label>
        <input type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estado del Servicio</label>
        <select class="form-control">
            <option>En progreso</option>
            <option>Completado</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Actualizar Servicio</button>
</form>
